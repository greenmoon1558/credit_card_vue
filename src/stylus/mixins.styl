shape()
  content: " "
  display: block

card-texture($radial-gradient = false)
  $b1 = rgba(255, 255, 255, 0)

  $hsla0 = hsla(0, 0%, 100%, 0)
  $hsla2 = hsla(0, 0%, 100%, .2)
  if $radial-gradient
    background-image: linear-gradient(-25deg, $hsla0 50%, $hsla2 70%, $hsla0 90%)
  else
    background-image: linear-gradient(-25deg, $b1 50%, $hsla2 70%, $b1 90%)
